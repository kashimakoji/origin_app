<% visitor = notification.visitor %>
<% visited = notification.visited %>
<div class="col-md-6 mx-auto">
  <div class="form-inline">
    <span>
      <%= link_to user_path(visitor) do %>
        <%#= image_tag avatar_url(visitor).to_s, class: "icon_mini" %>
        <strong><%= visitor.name %></strong>
      <% end %>
      <%= 'さんが' %>

      <% case notification.action %>
      <% when 'follow' then %>
        <%= "あなたをフォローしました" %>
      <% when 'comment' then %>
        <% if notification.user.id == visited.id %>
          <%= link_to "あなたの投稿", notification.user, style: "font-weight: bold;" %>
        <% else %>
          <span>
            <%= link_to user_path(notification.user) do %>
              <%#= image_tag  %>
              <strong><%= notification.user.name + "さんの投稿"%></strong>
            <% end %>
          </span>
        <% end %>
        <%= "にコメントしました" %>
      <% end %>

      <p class="text-muted mb-0"><%= Comment.find_by(id: notification.comment_id)&.comment %></p>
    </span>
  </div>
  <div class="small text-muted text-right">
    <%= time_ago_in_words(notification.created_at).upcase %>
  </div>
  <hr>
</div>
