<!-- <div class="container-fluid mx-auto" style="width: 100rem"> -->
<div class="container-fluid">
  <div class="row">
    <div class="col-sm-3">
    </div>

    <div class="col-sm-6" >
    <!-- <div class="d-flex justify-content-center"> -->
    <h2 class="text-center">みんなの固定費一覧画面</h2>
    <!-- カードで設計 -->
    <% @users.each do |user| %>
      <!-- <div class="card shadow-sm card-center" style="max-width: 25rem; margin-bottom: 10px "> -->
      <div class="card shadow-sm mb-2" style="max-width: 25rem; margin: 0 auto; ">
        <% total_monthly = [] %>
        <% user.fixed_costs.each do |fixed_cost| %>
          <% if fixed_cost.monthly_annual == "annual" %>
            <% total_monthly << monthly_payment(fixed_cost) %>
          <% elsif fixed_cost.monthly_annual == "monthly" %>
            <% total_monthly << fixed_cost.payment %>
          <% end %>
        <% end %>

        <div class="card-body pb-1">
          <h6 class="card-title">
              <div class="">
                <div class="">
                  <% if user.image.present? %>
                      <%= image_tag user.image.url, class: "rounded-circle", width: "10%" if user.image && user.image.url %>
                  <% end %>
                  <%= link_to "#{user.name}", user_path(user.id) %>
                </div>
                <div class="mt-1">
                  月額支出：<strong><%= total_monthly.sum.to_s(:delimited) %>円</strong>
                </div>
              </div>
          </h6>
        </div>
        <div class="card-footer bg-transparent">
          <small><%= l user.updated_at, format: :mid %></small>
        </div>
      </div>
    <% end %>
  </div>

  <div class="col-sm-3">
  </div>
</div>
</div>
