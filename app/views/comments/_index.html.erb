<ul>
  <% comments.each do |comment| %>
    <% if comment.id.present? %>
    <li>
      <div class="comment-content" id ="this_comment_<%= comment.id %>"></div>
      <p><%= comment.content %></p>
      <%= User.find(comment.send_user).email %>さんの投稿
      <% if current_user.id == comment.user.id %>

        <%= link_to "コメント編集", edit_user_comment_path(user, comment), remote: true, class: 'btn btn-primary btn-sm' %>
        <%= link_to "コメント削除", user_comment_path(comment.user_id, comment.id), class: 'btn btn-danger btn-sm', method: :delete, remote: true, data: { confirm: "本当に削除しますか?"} %>

      <% end %>
    </li>
    <% end %>
  <% end %>
</ul>
