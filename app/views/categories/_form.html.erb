  <%= form_with(model: @category, local: true) do |f| %>
    <% if @category.errors.any? %>
      <div id="error_explanation">
        <h2><%= @category.errors.count %>件のエラーがあります。</h2>
        <ul>
          <% @category.errors.full_messages.each do |msg| %>
            <li><%= msg %></li>
          <% end %>
        </ul>
      </div>
    <% end %>
    <%= f.label :cat_name, 'カテゴリー名', class: "form-label" %>
    <%= f.text_field :cat_name, class: "form-control form-control-sm", placeholder: "カテゴリー名を入力してください" %>
    <br>
    <% if action_name == "edit" %>
      <%= f.submit "変更", class: "btn btn-success btn-sm" %>
    <% else %>
      <%= f.submit "登録", class: "btn btn-success btn-sm" %>
    <% end %>
  <% end %>
  <br>
  <%= link_to "戻る", new_fixed_cost_path, class: "btn btn-outline-secondary btn-sm" %>
  <br>
