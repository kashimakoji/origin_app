<%= form_with(model: @category, url: categories_path, local: true) do |f| %>
  <% if @category.errors.any? %>
    <div id="error_explanation">
      <h2><%= @category.errors.count %>件のエラーがあります。</h2>
      <ul>
        <% @category.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <%= f.label :cat_name, 'カテゴリー名', class: "form-label " %>
  <%= f.text_field :cat_name, class: "form-control form-control-sm" %>
  <% if action_name == "edit" %>
    <%= f.submit "変更する", class: "btn btn-outline-secondary btn-sm" %>
  <% else %>
    <%= f.submit "作成する", class: "btn btn-outline-secondary btn-sm" %>
  <% end %>
<% end %>
<br>
