<h1>カテゴリー作成</h1>
<br>
<%= render 'form' %>
<br>
<% @categories.each do |category| %>
  <table>
    <tr>
      <td><%= category.cat_name %></td>
      <td><%= link_to "編集", edit_category_path(category.id), class: 'btn btn-primary btn-sm' %></td>
      <td><%= link_to "削除", category_path(category.id), method: :delete, class: 'btn btn-danger btn-sm', data: { confirm: "削除して良いですか？" } %></td>
    </tr>
  </table>
<% end %>
