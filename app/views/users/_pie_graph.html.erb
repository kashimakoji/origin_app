<div class="graph mx-auto" style="width: 350px;" id="pie_graph">
  <% if @monthly_view == "true" %>
    <%= pie_chart @join_monthlies_cost, label: "合計", library: {title: {text: "月額支出<br>#{@fixed_costs.map(&:payment).sum.to_s(:delimited)}円 "}}, remote: true %>
  <% else %>
    <%= pie_chart @join_annuals_cost, label: "合計", library: {title: {text: "年額支出<br>#{@fixed_costs.map(&:payment).sum{|i| i * 12 }.to_s(:delimited)}円 "}}, remote: true %>
  <% end %>
</div>
